<%= form_with(model: group) do |form| %>
<header class="bg-primary text-white">
  <nav class="d-flex justify-content-between p-2 align-items-center text-reset">   
    <a href='/groups'><i class="fas fa-arrow-left fs-1 text-white"></i></a>
    <h2 class="m-0 p-0">New Category</h2>
    <%= form.submit "Save", class: "nav-link fs-2" %>
  </nav> 
</header>

  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.text_field :name, placeholder: "Name", class: "form-control rounded-0" %>
  </div>

  <div>
    <%= form.file_field :icon, placeholder: "Icon", class: "form-control rounded-0" %>
  </div>
<% end %>
