<header class="bg-primary text-white sticky-top">
  <nav class="d-flex justify-content-between p-3 align-items-center text-center">   
    <a href='/'><i class="fa-solid fa-bars fs-1 text-white"></i></a>
    <h2 class="m-0 p-0">Categories</h2>
    <%= button_to destroy_user_session_path, method: :delete, class: "nav-link text-white fs-1" do %>
      <i class="fa-solid fa-right-from-bracket"></i>
    <% end %>
  </nav> 
</header>
<p style="color: green"><%= notice %></p>
 <div class="d-flex justify-content-between align-items-center  shadow-lg p-2 mb-3 bg-body-tertiary">
  <strong>Total Amount:</strong> <%= number_to_currency(Group.joins(:entities).sum(:amount)) %>
</div>

<div id="groups">
  <% @groups.each do |group| %>
    <%= render group %>
  <% end %>
</div>

<div class="d-flex flex-column fixed-bottom align-items-center justify-content-center text-center bg-success w-100 p-3">
  <%= link_to "Add a new category", new_group_path, class: "text-white w-100  nav-link border border-white  p-2" %>
</div>

